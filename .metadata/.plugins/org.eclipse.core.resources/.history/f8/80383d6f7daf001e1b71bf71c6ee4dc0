	<script>
		$(function(){
			$('#plus').click(function(){
				console.log($(this).parent().siblings().length);
				if($(this).parent().siblings().length<4){
					let tag=`<p><input type="file" name="file"></p>`;
					$(this).parents('#file_form').append(tag);
					
				}
				
			});
			$('#minus').click(function(){
				console.log($(this).parent().siblings().length);
				if($(this).parent().siblings().length==0){
					return;
				}
				$('#file_form').children("p").last().remove();
					
			});
		//----------------------------------------------------------
		
		ClassicEditor
		.create(document.querySelector('#content'),{
			extraPlugins:[uploadAdaterPlugin]
		})
		.catch(error=>{
			colsole.error(error);
		});
		});
		function uploadAdaterPlugin(editor){
			editer.plugins.get('FileRepository').createUploadAdapter=(loader)=>{
				return new UploadAdapter(loader);
			}
		}
	</script>
